<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/zandroid_audiorecord_pub_record_status"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone" >

    <LinearLayout
        android:id="@+id/zandroid_audiorecord_pub_record_status_show"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="invisible" >

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            layout="@layout/zandroid_audiorecord_voice_rcd_hint_window" />
    </LinearLayout>

    <TextView
        android:id="@+id/zandroid_audiorecord_pub_record_status_time_mes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20.0dip"
        android:background="@drawable/zandroid_audiorecord_voice_rcd_hint_bg"
        android:gravity="center"
        android:padding="10.0dip"
        android:text="录音时间还剩%d秒"
        android:visibility="invisible" />

</LinearLayout>